#include <stdio.h>
#include <math.h> // para usar sqrt

// função principal
int main() {
    float a, b, c;        // coeficientes da equação
    float delta, x1, x2;  // variáveis para cálculo das raízes

    // pede valores de a, b e c
    printf("Digite o valor de a: ");
    scanf("%f", &a);
    printf("Digite o valor de b: ");
    scanf("%f", &b);
    printf("Digite o valor de c: ");
    scanf("%f", &c);

    // calcula o delta (b² - 4ac)
    delta = (b * b) - (4 * a * c);

    // verifica se existem soluções reais
    if (delta < 0) {
        printf("Nao existem raizes reais.\n");
    } else if (delta == 0) {
        // só uma raiz
        x1 = -b / (2 * a);
        printf("Existe uma raiz real: %.2f\n", x1);
    } else {
        // duas raízes
        x1 = (-b + sqrt(delta)) / (2 * a);
        x2 = (-b - sqrt(delta)) / (2 * a);
        printf("As raizes sao: %.2f e %.2f\n", x1, x2);
    }

    return 0;
}
