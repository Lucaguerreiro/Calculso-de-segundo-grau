#include <stdio.h>
#include <math.h> // para usar sqrt

int main() {
    float a, b, c;        // coeficientes da equação
    float delta, x1, x2;  // variáveis para cálculo das raízes

    // pede os valores para o usuário
    printf("Digite o valor de a: ");
    scanf("%f", &a);
    printf("Digite o valor de b: ");
    scanf("%f", &b);
    printf("Digite o valor de c: ");
    scanf("%f", &c);

    // mostra a equação montada
    printf("\nEquacao: %.1fx^2 + %.1fx + %.1f = 0\n", a, b, c);

    // calcula o delta
    delta = (b * b) - (4 * a * c);
    printf("\nPasso 1: delta = b^2 - 4ac\n");
    printf("delta = (%.1f^2) - 4 * %.1f * %.1f\n", b, a, c);
    printf("delta = %.1f\n", delta);

    // verifica o valor de delta
    if (delta < 0) {
        printf("\nNao existem raizes reais.\n");
    } 
    else if (delta == 0) {
        printf("\nPasso 2: Como delta = 0, existe apenas uma raiz.\n");
        x1 = -b / (2 * a);
        printf("x = -b / 2a\n");
        printf("x = (%.1f) / (2 * %.1f)\n", -b, a);
        printf("x = %.2f\n", x1);
    } 
    else {
        printf("\nPasso 2: Como delta > 0, existem duas raizes.\n");
        x1 = (-b + sqrt(delta)) / (2 * a);
        x2 = (-b - sqrt(delta)) / (2 * a);

        printf("x1 = (-b + sqrt(delta)) / 2a\n");
        printf("x1 = (%.1f + sqrt(%.1f)) / (2 * %.1f)\n", -b, delta, a);
        printf("x1 = %.2f\n", x1);

        printf("\n");
        printf("x2 = (-b - sqrt(delta)) / 2a\n");
        printf("x2 = (%.1f - sqrt(%.1f)) / (2 * %.1f)\n", -b, delta, a);
        printf("x2 = %.2f\n", x2);
    }

    return 0;
}
